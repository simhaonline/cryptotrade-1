@using Microsoft.AspNet.Identity 
<nav class="navbar navbar-expand-lg justify-content-right">
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav">
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a href="@Url.Action("Index", "CryptoAdmin")" class="active nav-link">Admin Dashboard</a>

                </li>
            }

            <li> <a class="nav-link" href="@Url.Action("Index", "Investor")">Dashboard</a></li>

            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>



        </ul>

    }
}
else
    {
        <ul class="navbar-nav">
            <li>
                <a href="@Url.Action("Login","Account")" class="active nav-link">Login</a>

            </li>

            <li>
                <a href="@Url.Action("Register","Account")" class="nav-link">Register</a>

            </li>

                                   
        </ul>

    }
</nav>