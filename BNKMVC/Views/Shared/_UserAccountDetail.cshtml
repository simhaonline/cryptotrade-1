@using Microsoft.AspNet.Identity;
@model BNKMVC.Models.UserDto
@{ 
    var countyList = new BNKMVC.Entities.mbankEntities().Countries.OrderBy(a => a.Name).ToList();
    SelectList list1 = new SelectList(countyList, "Alph3Code", "Name");
}

@if (User.IsInRole("Admin"))
{
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("UpdateUser", "Admin", new { @class = "form-horizontal form-material" }))
            {

                @Html.HiddenFor(a => a.Id);
                <div class="form-group">
                    <label class="col-md-12">First name</label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control form-control-line" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Last name</label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(a => a.LastName, new { @class = "form-control form-control-line" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="example-email" class="col-md-12">Email</label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(a => a.Email, new { @class = "form-control form-control-line", disabled="disabled", type = "email" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-12">Phone No</label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control form-control-line", type = "tel" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Address</label>
                    <div class="col-md-12">
                        @Html.TextAreaFor(a => a.Address, new { @class = "form-control form-control-line", rows = "5" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-12">Gender</label>
                    <div class="col-sm-12">
                        @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>{
             new SelectListItem{ Text="Male", Value="Male"},
             new SelectListItem{ Text="Female", Value="Female"}}, htmlAttributes: new { @class = "form-control form-control-line" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-12">Country</label>
                    <div class="col-sm-12">
                        @Html.DropDownListFor(m => m.CountryId, list1, htmlAttributes: new { @class = "form-control form-control-line" })

                    </div>
                </div>

               
                <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-success">Update Profile</button>
                    </div>
                </div>

            }

        </div>
    </div>
}


