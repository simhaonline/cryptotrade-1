@model IEnumerable<BNKMVC.Entities.ForwardTransfer>
@using BNKMVC.Services;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var bal = @String.Format("{0:N}", ViewBag.balance);
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body border-top">
                <div class="row mb-0">
                    <!-- col -->
                    <div class="col-lg-4 col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="mr-2"><span class="text-orange display-5"><i class="mdi mdi-wallet"></i></span></div>
                            <div>
                                <span>Account Balance</span>
                                <h3 class="font-medium mb-0">$ @bal</h3>
                            
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="mr-2"><span class="text-orange display-5"><i class="mdi mdi-account"></i></span></div>
                            <div>
                                <span>Account Number</span>
                                    <h3 class="font-medium mb-0"> @ViewBag.accountNo</h3>
                                <h5> </h5>
                            </div>
                        </div>
                    </div>
                    <!-- col -->
                    <!-- col -->
                    <div class="col-lg-4 col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="mr-2"><span class="text-cyan display-5"><i class="mdi mdi-star-circle"></i></span></div>
                            <div>
                                <span>Transactions</span>
                                <h3 class="font-medium mb-0">@ViewBag.transactions</h3>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="card bg-info">

            <div class="card-body">
                <div class="d-flex no-block align-items-center">
                    <div class="text-white">
                        <h2> $ @bal</h2>
                        <h6>Balance</h6>
                    </div>
                    <div class="ml-auto">
                        <span class="text-white display-6"><i class="ti-wallet"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <a href="@Url.Action("Transactions","User")">
            <div class="card bg-cyan">
                <div class="card-body">
                    <div class="d-flex no-block align-items-center">
                        <div class="text-white">
                            <h2>@ViewBag.transactions</h2>
                            <h6>Transactions</h6>
                        </div>
                        <div class="ml-auto">
                            <span class="text-white display-6"><i class="ti-view-list"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </a>

    </div>
    <div class="col-lg-3 col-md-6">
        <a href="@Url.Action("Transfer","User")">
            <div class="card bg-success">
                <div class="card-body">
                    <div class="d-flex no-block align-items-center">
                        <div class="text-white">
                            <h2>Start</h2>
                            <h6>Transfer</h6>
                        </div>
                        <div class="ml-auto">
                            <span class="text-white display-6"><i class="mdi-transfer mdi "></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </a>

    </div>
    @*<div class="col-lg-3 col-md-6">
        <a href="@Url.Action("l","Account")"></a>
        <div class="card bg-orange">
            <div class="card-body">
                <div class="d-flex no-block align-items-center">
                    <div class="text-white">
                        <h2>Log out</h2>
                        <h6>Sales</h6>
                    </div>
                    <div class="ml-auto">
                        <span class="text-white display-6"><i class="mdi-logout mdi"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>*@
</div>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">All Transaction</h4>

            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Amount</th>
                            <th scope="col">Account Name</th>
                            <th scope="col">Bank Name</th>
                            <th scope="col">Account no</th>
                            <th scope="col">Swift Code</th>
                            <th scope="col">IBAN</th>
                            <th scope="col">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>

                                <td colspan="8">
                                    <h3>No Transacation Found</h3>
                                </td>

                            </tr>
                        }
                        else
                        {
                            foreach (var i in Model)
                            {
                               
                                    <tr>

                                        <td>@i.Amount</td>
                                        <td>@i.BeneficaryName</td>
                                        <td>@i.DestinationAccountNo</td>
                                        <td>@i.BeneficaryBank</td>
                                        <td>@i.BeneficarySwiftCode</td>
                                        <td>@i.IBAN</td>
                                        <td>@i.Date</td>
                                    </tr>

                                
                            }
                        }


                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>